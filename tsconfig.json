{
  "compilerOptions": {
    "incremental": true,
    "composite": true,
    "target": "es2017",
    "module": "commonjs",
    "rootDir": "./src",
	"outDir": "./dist",
    "sourceMap": true,
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "skipLibCheck": true
  },
  "include": [
	"src/**/*"
  ],
  "exclude": [
	"dist",
	"node_modules"
  ],
  "compileOnSave": false
}
